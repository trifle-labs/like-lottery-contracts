{
  "name": "@trifle/like-lottery-contracts",
  "version": "1.0.6",
  "description": "Smart contracts for Like Lottery",
  "main": "dist/module.js",
  "module": "dist/module.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/module.js",
      "require": "./dist/module.js",
      "types": "./dist/index.d.ts"
    }
  },
  "targets": {
    "module": {
      "optimize": true,
      "source": "src/index.ts",
      "isLibrary": true
    }
  },
  "files": [
    "src",
    "contracts",
    "artifacts",
    "deployments",
    "typechain-types",
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "build": "yarn build:js && yarn build:types",
    "build:js": "rm -rf .parcel-cache && rm -rf dist && yarn parcel build",
    "build:types": "tsc --project tsconfig.declaration.json",
    "dev": "rm -rf .parcel-cache && rm -rf dist && yarn parcel watch src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:baseSepolia": "hardhat run scripts/deploy.ts --network baseSepolia",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "verify:local": "hardhat run scripts/verify.ts --network localhost",
    "verify:baseSepolia": "hardhat run scripts/verify.ts --network baseSepolia",
    "verify:base": "hardhat run scripts/verify.ts --network base",
    "node": "hardhat node"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.8.0",
    "@ethersproject/providers": "^5.8.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^2.5.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "chai": "^4.3.10",
    "dotenv": "^17.2.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.22.16",
    "hardhat-gas-reporter": "^2.3.0",
    "parcel": "^2.15.4",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {}
}
